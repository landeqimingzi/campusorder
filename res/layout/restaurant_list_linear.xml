<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="120dp"
    android:layout_height="120dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/restautant_list_linear_picture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/mu1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/restaurant_list_linear_salenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/restaurant_list_linear_lable"
            android:layout_alignBottom="@+id/restaurant_list_linear_lable"
            android:layout_toRightOf="@+id/restaurant_list_linear_lable"
            android:paddingLeft="10dp"
            android:text="月售147份" />

        <ImageButton
            android:id="@+id/restaurant_list_linear_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/res_add" />

        <TextView
            android:id="@+id/restaurant_list_linear_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/restaurant_list_linear_add"
            android:text="0" />

        <ImageButton
            android:id="@+id/restaurant_list_linear_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/restaurant_list_linear_number"
            android:visibility="gone"
            android:background="@drawable/res_sub" />

        <TextView
            android:id="@+id/restaurant_list_linear_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/restaurant_list_linear_priceIcon"
            android:text="23" />

        <TextView
            android:id="@+id/restaurant_list_linear_priceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="2dp"
            android:paddingLeft="8dp"
            android:layout_alignParentLeft="true"
            android:text="￥" />

        <TextView
            android:id="@+id/restaurant_list_linear_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="五星推荐" />

        <TextView
            android:id="@+id/restaurant_list_linear_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="8dp"
            android:text="肥牛锅仔"
            android:textSize="17sp" />

    </RelativeLayout>

</LinearLayout>
